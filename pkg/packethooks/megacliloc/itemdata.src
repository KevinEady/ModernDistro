    prop.clilocid := 1038021; // Blessed
    prop.values := array{};
    allprops.append( prop );
  endif
  if ( xObject.cursed && !GetObjProperty( xObject, "HiddenCurse" ))
    prop.clilocid := 1049643; // cursed
    prop.values := array{};
    allprops.append( prop );
  endif
  if ( xObject.insured)
    prop.clilocid := 1061682; // <b>insured</b>
    prop.values := array{};
    allprops.append( prop );
  endif

