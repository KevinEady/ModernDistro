          prop.clilocid := 1062755;
          prop.values := array{};
          allprops.append( prop );
        endif
        case ( lower( xObject.attribute ))
          "swordsmanship":
            prop.clilocid := 1061172;
          "macefighting":
            prop.clilocid := 1061173;
          "fencing":
            prop.clilocid := 1061174;
          "archery":
            prop.clilocid := 1061175;
          "throwing":
            prop.clilocid := 1112075;
          default:
            prop.clilocid := 1060400;
        endcase
        prop.values := array{};
        allprops.append( prop );
        if ( xObject.IsMagicWand() && GetObjProperty( xObject, "IDed" ))
